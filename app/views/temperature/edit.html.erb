
  <div class="p-4 md:w-1/3 mx-auto text-center">
 <div class="h-full border-2 border-gray-200 border-opacity-60 rounded-lg overflow-hidden">
   <div class="p-6">
    <div class="w-full md:w-1/2 px-3 mx-auto">
    <p> Enter your own cut off values for cold, warm, and hot</p>
     
    <%= form_tag(update_temp_path, method: :post) do %>
        <label>Cold</label><%= text_field_tag :cold, params[:cold], type: "number", min: "0", max: "40", placeholder: "Cold", class: "w-20 p-2 bg-gray-300 my-3" %>
        <br />
        <label>Warm</label><%= text_field_tag :hot, params[:hot], type: "number", min: "41", max: "70", placeholder: "Warm", class: "w-20 p-2 bg-gray-300 my-3" %>
        <br />
        <label>Hot</label><%= text_field_tag :warm, params[:warm], placeholder: "Hot", type: "number", min: "71", max: "120", class: "p-2 bg-gray-300 my-3 w-20" %>
        <br />
        <br />
        <span class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full"><%= submit_tag "Submit" %></span>
        <% end %>    
        
    </div>
   </div>
   <div class="flex flex-box mx-auto md:w-1/4 ">
          <a class="text-indigo-500 inline-flex items-center md:mb-2 lg:mb-0 px-2" >Return   
            <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14"></path>
              <path d="M12 5l7 7-7 7"></path>
            </svg>
              <%=link_to 'Home', home_path %>
          </a>
          </div>
 </div>
</div>